extends layout

block content

	.w3-container.w3-indigo.w3-padding
				.w3-bar.w3-indigo
					a.w3-bar-item.w3-button.w3-hover-indigo(href="/" style="font-weight: bold;font-family:'Homemade Apple',cursive;font-size:18px") Airtravel
					
	.w3-container.w3-margin
		.w3-panel.w3-border-blue.w3-margin
			p #{user.Name}
			p #{user.LastName}
			p #{user.Email}
			p #{user.Username}
			p #{user.id}
			p #{user.Rating}
			p #{user.CardNum}
			p Hola
			if session.user.id == user.id
				-var editUserPath = '/users/edit/'+user.id;
				a.w3-button.w3-blue.w3-hover-indigo.w3-center.w3-round(href=editUserPath) Edit User
				a.w3-button.w3-blue.w3-hover-indigo.w3-center.w3-round(href="/housing/new") New House
	
